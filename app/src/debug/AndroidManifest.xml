<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="uqam.projetconceptionlogiciel">

    <application>
        <activity
            android:name="uqam.projetconceptionlogiciel.eventListActivity"
            android:label="@string/title_event_list"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="uqam.projetconceptionlogiciel.eventDetailActivity"
            android:label="@string/title_event_detail"
            android:parentActivityName="uqam.projetconceptionlogiciel.eventListActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="uqam.projetconceptionlogiciel.eventListActivity" />
        </activity>
    </application>

</manifest>
